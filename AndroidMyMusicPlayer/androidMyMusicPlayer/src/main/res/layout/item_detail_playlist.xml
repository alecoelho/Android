<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height_track"
        android:background="@drawable/bg_white_list_selector" >

        <ImageView
            android:id="@+id/img_songs"
            android:layout_width="@dimen/height_img_small_track"
            android:layout_height="@dimen/height_img_small_track"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_music_default" />

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_more_vert_grey600_36dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toLeftOf="@+id/img_menu"
            android:layout_toRightOf="@+id/img_songs"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_song"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="VEXKHOIS"
                android:textColor="@color/black_text"
                android:textSize="@dimen/text_size_body"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_singer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/small_margin"
                android:text="VEXKHOIS"
                android:textColor="@color/black_secondary_text"
                android:textSize="@dimen/text_size_body" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>