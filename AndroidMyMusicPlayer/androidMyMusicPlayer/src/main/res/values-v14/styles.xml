<resources>

     <!--
        Base application theme for API 14+. This theme completely replaces
        AppBaseTheme from BOTH res/values/styles.xml and
        res/values-v11/styles.xml on API 14+ devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat">
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- customize the color palette -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color_dark</item>
        <item name="colorAccent">@color/main_color_fallback</item>
        <item name="cpbStyle">@style/CircularProgressBar</item>
    </style>

    <style name="AppBaseTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!--<item name="windowActionBar">false</item>-->
        <!-- customize the color palette -->
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color</item>
        <item name="colorAccent">@color/main_color_fallback</item>
        <item name="cpbStyle">@style/CircularProgressBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/main_color</item>
    </style>


    <style name="SwitchTextAppearance" parent="@style/TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/black</item>
    </style>



</resources>