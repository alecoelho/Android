<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/layout_root"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height_track"
        android:background="@drawable/bg_white_list_selector" >

        <TextView
            android:id="@+id/tv_number"
            android:layout_width="@dimen/height_img_small_track"
            android:layout_height="@dimen/height_img_small_track"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="1."
            android:textColor="@color/black_text"
            android:textSize="@dimen/text_size_subhead" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_toLeftOf="@+id/img_menu"
            android:layout_toRightOf="@+id/tv_number"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_playlist_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="ABCBCBC"
                android:textColor="@color/black_text"
                android:textSize="@dimen/text_size_body"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_number_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="@string/format_number_musics"
                android:textColor="@color/black_secondary_text"
                android:textSize="@dimen/text_size_body" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@drawable/ic_more_vert_grey600_36dp"
            android:minHeight="1sp"
            android:minWidth="1sp" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/Alessandro/Downloads/FullSource/SourceCode/AndroidStudio/AndroidMyMusicPlayer/androidMyMusicPlayer/src/main/res/layout/item_playlist.xml -->