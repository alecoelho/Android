<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/btn_add_playlist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height_normal"
        android:background="@drawable/bg_white_list_selector" >

        <Button
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:background="@drawable/ic_arrow_back_black_36dp"
            android:minHeight="1sp"
            android:minWidth="1sp" />

        <TextView
            android:id="@+id/tv_name_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:singleLine="true"
            android:text="Favorite"
            android:textColor="@color/black_text"
            android:textSize="@dimen/text_size_subhead"
            android:textStyle="bold" />
    </RelativeLayout>

