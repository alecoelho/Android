<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/btn_add_playlist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/row_height_normal"
        android:background="@drawable/bg_white_list_selector"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_playlist_add_black_36dp" />

        <TextView
            android:id="@+id/tv_add_new_playlist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:singleLine="true"
            android:text="@string/title_add_playlist"
            android:textColor="@color/black_text"
            android:textSize="@dimen/activity_horizontal_margin"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/Alessandro/Downloads/FullSource/SourceCode/AndroidStudio/AndroidMyMusicPlayer/androidMyMusicPlayer/src/main/res/layout/header_playlist.xml -->